<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/teacherAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/incog" />

    <TextView
        android:id="@+id/textMyTeacherId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/teacherAvatar"
        android:layout_alignTop="@id/teacherAvatar"
        android:layout_marginStart="8dp"
        android:text="123"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/color3"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textMyTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/teacherAvatar"
        android:layout_below="@id/textMyTeacherId"
        android:layout_marginStart="8dp"
        android:text="Кльошев Павло Анатолійович"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical" />

</RelativeLayout>
