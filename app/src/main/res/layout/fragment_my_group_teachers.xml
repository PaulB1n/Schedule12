<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGroupTeachersFragment">

    <TextView
        android:id="@+id/TitleMyGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Викладачі моєї групи"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="18dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:background="@color/backgraund"
        android:textColor="@color/black"
        android:shadowColor="#888888"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="4"
        style="@style/TitleTextViewStyle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMyGroupTeachers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TitleMyGroup"
        android:background="@color/backgraund"
        android:clipToPadding="false"
        android:padding="10dp"
        android:scrollbars="vertical"

    />

</RelativeLayout>
