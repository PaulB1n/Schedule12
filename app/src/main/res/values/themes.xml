<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базова світла тема -->
    <style name="Base.Theme.Schedule" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основний колір -->
        <item name="colorPrimary">@color/color2</item>
        <!-- Варіант основного кольору -->
        <item name="colorPrimaryVariant">@color/color3</item>
        <!-- Колір для елементів на основному кольорі -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Колір фону вікна -->
        <item name="android:windowBackground">@color/backgraund</item>
        <!-- Основний колір тексту -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- Колір фону -->
        <item name="android:colorBackground">@color/backgraund</item>
        <!-- Вторинний колір тексту -->
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- Основний шрифт -->
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
    </style>

    <!-- Стиль для заголовків -->
    <style name="Base.Theme.Schedule.Heading" parent="Base.Theme.Schedule">
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Стиль для вторичного текста -->
    <style name="Base.Theme.Schedule.SecondaryText" parent="Base.Theme.Schedule">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Тема Schedule, що успадковує базову тему -->
    <style name="Theme.Schedule" parent="Base.Theme.Schedule" />
</resources>
